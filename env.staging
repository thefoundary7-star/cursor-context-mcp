# Staging Environment Configuration for MCP SaaS Platform
# Copy this file to .env and update the values for your staging environment

# Application Configuration
NODE_ENV=staging
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://mcp_user:your_staging_password@localhost:5432/mcp_saas_staging?schema=public
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=30000
DATABASE_POOL_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://:your_staging_redis_password@localhost:6379
REDIS_PASSWORD=your_staging_redis_password
REDIS_DB=1

# JWT Configuration
JWT_SECRET=your_staging_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption Configuration
ENCRYPTION_KEY=your_staging_32_character_encryption_key
ENCRYPTION_ALGORITHM=aes-256-gcm

# Stripe Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_test_webhook_secret_here
STRIPE_PRICE_ID_BASIC=price_your_test_basic_plan_price_id
STRIPE_PRICE_ID_PRO=price_your_test_pro_plan_price_id
STRIPE_PRICE_ID_ENTERPRISE=price_your_test_enterprise_plan_price_id

# API Configuration
API_RATE_LIMIT=500
API_RATE_WINDOW=900000
API_TIMEOUT=30000
CORS_ORIGIN=https://staging.your-domain.com,https://staging-api.your-domain.com

# Email Configuration (using SendGrid as example)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_test_api_key_here
FROM_EMAIL=staging@your-domain.com
FROM_NAME=MCP SaaS Platform (Staging)

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=your_staging_session_secret_here
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# CDN Configuration
CDN_URL=https://staging-cdn.your-domain.com
CDN_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-staging-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/staging.your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/staging.your-domain.key
SSL_CA_PATH=/etc/ssl/certs/staging.your-domain-ca.crt

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_BILLING=true
FEATURE_LICENSES=true
FEATURE_API_KEYS=true
FEATURE_WEBHOOKS=true

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=1800
MAX_CONNECTIONS=500

# Development/Testing
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
