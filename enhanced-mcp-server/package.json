{
  "name": "@filebridge/enhanced-mcp-server",
  "version": "2.1.0",
  "description": "Professional-grade enhanced MCP server with 26+ advanced features, extending @modelcontextprotocol/server-filesystem",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "enhanced-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:selftest": "SELF_TEST_ON_STARTUP=true node dist/index.js",
    "start:no-license": "DISABLE_LICENSE=true node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "shx rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "filesystem",
    "enhanced",
    "code-navigation",
    "testing",
    "git",
    "security",
    "performance",
    "claude",
    "ai",
    "developer-tools"
  ],
  "author": "FileBridge Team",
  "license": "MIT",
  "homepage": "https://github.com/filebridge/enhanced-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/filebridge/enhanced-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/filebridge/enhanced-mcp-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@typescript-eslint/parser": "^6.12.0",
    "acorn": "^8.11.2",
    "acorn-walk": "^8.3.0",
    "async-mutex": "^0.4.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "comment-parser": "^1.4.1",
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "doctrine": "^3.0.0",
    "eventemitter3": "^5.0.1",
    "execa": "^8.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "fast-xml-parser": "^4.3.2",
    "fuzzy": "^0.1.3",
    "glob": "^10.3.10",
    "inquirer": "^9.2.11",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "lru-cache": "^10.0.1",
    "minimatch": "^10.0.1",
    "node-cache": "^5.1.2",
    "ora": "^7.0.1",
    "p-limit": "^4.0.0",
    "p-queue": "^7.4.1",
    "pg": "^8.16.3",
    "semver": "^7.5.4",
    "which": "^4.0.0",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/diff": "^5.0.8",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash.debounce": "^4.0.9",
    "@types/lodash.throttle": "^4.1.9",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "@types/semver": "^7.5.6",
    "@types/which": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/test/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/test/**/*.test.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}